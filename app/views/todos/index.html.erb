<p id="notice"><%= notice %></p>

<h1>Todos</h1>

<table>
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Completed at</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <%= render "form", todo: @todo %>

  <tbody>
    <% @todos.each do |todo| %>
      <tr>
        <td><%= check_box_tag(nil, nil, todo.completed_at?, data: { reflex: "click->ExampleReflex#toggle", id: todo.id }) %></td>
        <td><%= todo.title %></td>
        <td><%= todo.completed_at %></td>
        <td><%= link_to 'Show', todo %></td>
        <td><%= link_to 'Edit', edit_todo_path(todo) %></td>
        <td><%= link_to 'Destroy', todo, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Todo', new_todo_path %>
